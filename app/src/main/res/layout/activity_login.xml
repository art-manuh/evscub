<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".login">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/taxi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/phone_login"/>

    <Button
        android:id="@+id/googlelogin"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:drawableLeft="@drawable/common_google_signin_btn_icon_dark_normal"
        android:text="Sign in with Google"
        android:drawablePadding="0dp"
        app:cornerRadius="10dp"
        android:backgroundTint="#11174A"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/phone_login"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:text=" sign in with Phone  "
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:backgroundTint="#1D6C56"
        app:cornerRadius="10dp"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/googlelogin" />
</androidx.constraintlayout.widget.ConstraintLayout>